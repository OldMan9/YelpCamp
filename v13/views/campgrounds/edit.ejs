<% include ../partials/header %>


<div class = "row">
   <h1 style = "text-align: center;">Edit <%= campground.name %></h1>
   <div style = "width: 30% ; margin: 25px auto;">
       <form action = "/campgrounds/<%= campground._id %>?_method=PUT" method = "POST">
           <div class = "form-group">
               <input type = "text" class = "form-control" name = "campground[name]" value ="<%= campground.name %>" required>
           </div>
           <div class = "form-group">
               <input type = "number" class = "form-control" name = "campground[price]" value ="<%= campground.price %>" min ="0" step ="0.01" required>
           </div>
           <div class = "form-group">
               <input type = "text" class = "form-control" name = "campground[image]" value ="<%= campground.image %>" required>
           </div>
           <div class = "form-group">
               <input type = "text" class = "form-control" name = "campground[description]" value ="<%= campground.description %>" required>
           </div>
           <div class = "form-group">
               <button class= "btn btn-lg btn-primary btn-block">Submit!</button>
           </div>
        </form>
        <a href = "/campgrounds">Go Back</a> 
   </div>
</div>


<% include ../partials/footer %>