<% include ../partials/header %>


<div class = "row justify-content-center">
   <div class="col-md-12 text-center">
      <h1>Edit <%= campground.name %></h1>
   </div>
   <div class ="col-lg-4 col-md-6 col-xs-12">
       <form action = "/campgrounds/<%= campground._id %>?_method=PUT" method = "POST" enctype="multipart/form-data">
           <div class = "form-group row">
               <label for="name">Name</label>
               <input type = "text" class = "form-control" name = "campground[name]" value ="<%= campground.name %>" required>
           </div>
           <div class = "form-group row">
               <label for="cost">Price</label>
               <input type = "number" class = "form-control" name = "campground[price]" value ="<%= campground.price %>" min ="0" step ="0.01" required>
           </div>
            <div class ="form-group row">
               <label for="image">Image </label>
               <div class="custom-file" id="customFile" lang="es">
                  <input type="file" class="custom-file-input" id="image" name ="image" aria-describedby="fileHelp" accept="image/*" required>
                  <label class="custom-file-label" for="image">Select an Image...</label>
               </div>
            </div>
           <div class = "form-group row">
               <label for="description">Description</label>
               <input type = "text" class = "form-control" name = "campground[description]" value ="<%= campground.description %>" required>
           </div>
           <div class="form-group row">
               <label for="location">Location</label>
               <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
           </div>
           <div class = "form-group row">
               <button class= "btn btn-lg btn-primary btn-block">Submit!</button>
           </div>
        </form>
        <a href = "/campgrounds">Go Back</a> 
   </div>
</div>


<% include ../partials/footer %>